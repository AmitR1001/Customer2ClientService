<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardBackgroundColor="#B3008CBA"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgpicS"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:src="@drawable/prof_bg" />


            <TextView
                android:id="@+id/txtv_shopname"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@+id/imgpicS"
                android:maxLines="2"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:text="Shop Name"

                android:textColor="@color/blue_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtv_city"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_service"
                android:layout_marginStart="7dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imgpicS"
                android:maxLines="2"
                android:paddingStart="15dp"
                android:text="City"
                android:textColor="@color/blue_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtv_service"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_shopname"
                android:layout_marginStart="7dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imgpicS"
                android:maxLines="2"
                android:paddingStart="15dp"
                android:text="Services"
                android:textColor="@color/blue_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imagv_upload"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@+id/imgpicS"
                android:layout_marginStart="2dp"
                android:layout_marginTop="17dp"

                android:layout_marginEnd="2dp"
                android:layout_marginBottom="8dp" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>